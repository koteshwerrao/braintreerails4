- model_class = BraintreeRails::Address
.page-header
  %h1=t '.title', default: model_class.model_name.human
- [:full_name, :company, :street_address, :extended_address, :locality, :region, :postal_code, :country_code_alpha2].each do |attribute|
  %p
    %strong= model_class.human_attribute_name(attribute) + ':'
    %br
    = @address.send(attribute)

.form-actions
  = link_to 'Back', user_customer_addresses_path(@user), class: 'btn'
  = link_to 'Edit', edit_user_customer_address_path(@user, @address), class: 'btn'
  = link_to 'Destroy', user_customer_address_path(@user, @address), method: "delete", data: {confirm: 'Are you sure?'}, class: 'btn btn-danger'
