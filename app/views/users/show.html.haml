- model_class = User
.page-header
  %h1=t '.title', default: model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @user.email

.form-actions
  = link_to 'Back', users_path, class: 'btn'
  = link_to 'Edit', edit_user_path(@user), class: 'btn'
  = link_to 'Customer info', user_customer_path(@user), class: 'btn'
  = link_to 'Destroy', user_path(@user), method: 'delete', data: {confirm: 'Are you sure?'}, class: 'btn btn-danger'
